* {
  margin: 0;
  padding: 0;
}

.account-container {
  min-height: 70vh;
  width: 100%;
  background-color: rgb(253, 240, 213);
  display: flex;
  padding: 40px;
}

.form-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 250px;
  margin-left: 40px;
}

.form-container input {
  width: 100%;
}

@media screen and (max-width: 720px) {
  .account-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
}
